<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rental_properties.each do |rental_property| %>
      <tr>
        <td><%= rental_property.name %></td>
        <td><%= rental_property.rent %><span>円</span></td>
        <td><%= rental_property.address %></td>
        <td><%= rental_property.age %><span>年</span></td>
        <td><%= rental_property.note %></td>
        <td><%= link_to '詳細', rental_property %></td>
        <td><%= link_to '編集', edit_rental_property_path(rental_property) %></td>
        <td><%= link_to '削除', rental_property, method: :delete, data: { confirm: '本当に消しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '物件を登録する', new_rental_property_path %>
